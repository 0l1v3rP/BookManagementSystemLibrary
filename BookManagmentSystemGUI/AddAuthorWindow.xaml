<Window x:Class="BookManagmentSystemGUI.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManagmentSystemGUI"
        mc:Ignorable="d"
        Title="AddAuthorWindow"  Width="320" SizeToContent="Height">
    <Grid>
        <ListBox  Margin="0,29,0,100" x:Name="AuthorsListBox" DisplayMemberPath="Name"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,8,0,0" TextWrapping="Wrap" Text="existing names:" VerticalAlignment="Top" Width="115"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="220,138,0,0" VerticalAlignment="Top" Click="Add_Click" Width="66"/>
        <TextBox HorizontalAlignment="Left" x:Name="NameTextBox" Height="20" Margin="63,138,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="117"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="10,138,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="48"/>
        <Button Content="OK" Click="OK_Click" HorizontalAlignment="Right" Margin="0,177,60,10" VerticalAlignment="Top" Width="81"/>
        <Button Content="Cancel" Click="Cancel_Click" HorizontalAlignment="Left" Margin="60,177,0,10" VerticalAlignment="Top" Width="80"/>
    </Grid>
</Window>
